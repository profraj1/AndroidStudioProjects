<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llDashboardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">
            <ImageView
                android:id="@+id/imgBookImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:padding="3dp"
                android:src="@drawable/book_app_icon_web"
                android:scaleType="centerCrop"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3">

            <TextView
                android:id="@+id/txtBookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sansation_bold"
                android:padding="5dp"
                android:text="My Book"
                android:textSize="20sp"
                android:scrollHorizontally="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBookTitle"
                android:fontFamily="@font/sansation_italic"
                android:padding="5dp"
                android:text="Name of the Author"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtBookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBookAuthor"
                android:fontFamily="@font/sansation_italic"
                android:padding="5dp"
                android:text="Rs 300.00"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">
            <TextView
                android:id="@+id/txtBookRating"
                android:layout_weight="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star_yellow_24dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:drawableTint="@color/colorPrimary"
                android:fontFamily="@font/sansation_italic"
                android:padding="5dp"
                android:text="4.3"
                android:textColor="#F7C805"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
