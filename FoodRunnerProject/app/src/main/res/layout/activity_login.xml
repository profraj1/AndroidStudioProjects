<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/imgLoginIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/food_runner_icon"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/imgLoginIcon"
        android:hint="@string/username_hint"
        android:textColorHint="#000000"
        android:layout_margin="30dp"
        android:inputType="phone"
        android:maxLines="1"
        android:maxLength="10"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"
        android:background="@drawable/et_custom"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:drawablePadding="5dp"/>
    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etUsername"
        android:hint="@string/password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#000000"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"
        android:background="@drawable/et_custom"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="5dp"/>

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etLoginPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_custom"
        android:text="@string/log_in"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogIn"
        android:text="@string/forgot_password"
        android:layout_centerInParent="true"
        android:fontFamily="@font/roboto_regular"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#F4F6F6"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txtDontHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_account"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20sp"
            android:textColor="#58D68D"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center_horizontal"
            android:text="@string/sign_up"
            android:textColor="#F4F6F6"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>




</RelativeLayout>