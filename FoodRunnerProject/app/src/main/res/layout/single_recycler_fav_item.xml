<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/llFavContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal"
        android:background="#FBEEE6 ">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgFavResImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/food_runner_icon"
                android:scaleType="centerCrop"
                android:background="@drawable/et_custom"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtFavResName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/play_fair_bold"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Name of the Restaurants"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFavResCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFavResName"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/playfair_regular"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Rs 100/person"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">
            <TextView
                android:id="@+id/txtFavResRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:textSize="18sp"
                android:fontFamily="@font/sansation_bold"
                android:textColor="#D35400"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/imgFavFavouriteIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtFavResRating"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="21dp"
                android:drawablePadding="5dp"
                android:src="@drawable/ic_favorite_red_24dp" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
