<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/contentOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBEEE6 ">
        <RelativeLayout
            android:id="@+id/llOrderHistoryHeaderContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOrderHistoryResName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the Restaurant"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Date of Order"
                    android:textColor="#000"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderHisItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llOrderHistoryHeaderContent"
            android:padding="5dp"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>